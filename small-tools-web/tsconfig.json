{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    },
    // Volar支持，指定全局组件类型
    "types": ["element-plus/global"],
    // 允许编译器编译JS文件
    "allowJs": true,
    // 允许在JS文件中报错，通常与allowJS一起使用
    "checkJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/utils/mixin.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
